<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
>
	<TextView 
		android:id = "@+id/list_view_name"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerVertical = "true"
	    android:padding="10dp"
	    android:textSize="16sp"
	    android:layout_toRightOf="@id/list_view_prepare"/>
   	<TextView 
		android:id = "@+id/list_view_prepare"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerVertical = "true"
	    android:paddingTop="10dp"
	    android:paddingBottom="10dp"
	    android:paddingLeft="5dp"
	    android:paddingRight="5dp"
	    android:textColor="#00FFFF"
	    android:textSize="16sp"
	    android:layout_alignParentLeft="true" />
   	<TextView 
		android:id = "@+id/list_view_spell_lvl"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:padding="5dp"
	    android:textSize="16sp"
	    android:layout_alignParentRight="true" />
    <TextView 
		android:id = "@+id/list_view_spell_school"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:padding="5dp"
	    android:textSize="16sp"
	    android:text="Conj"
	    android:layout_below="@id/list_view_spell_lvl"
	    android:layout_alignParentRight="true" />
	<TextView 
		android:id = "@+id/list_view_spell_known"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:padding="2dp"
	    android:textSize="10sp"
	    android:layout_below="@id/list_view_prepare"
	    android:layout_alignParentLeft="true" />
</RelativeLayout>
